<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:fillViewport="true"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/court">

        <TextView
            android:id="@+id/tv_team_one_name_gf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/squada_one"
            android:text="@string/team_name1"
            android:textColor="@color/team1"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bt_fthrow_team1"
            app:layout_constraintStart_toStartOf="@+id/bt_fthrow_team1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.050000012" />

        <TextView
            android:id="@+id/tv_team_two_name_gf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/squada_one"
            android:text="@string/team_name2"
            android:textColor="@color/team2"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bt_fthrow_team2"
            app:layout_constraintStart_toStartOf="@+id/bt_fthrow_team2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.050000012" />

        <TextView
            android:id="@+id/tv_team1_score_gf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squada_one"
            android:text="@string/score"
            android:textColor="@color/black"
            android:textSize="72sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bt_fthrow_team1"
            app:layout_constraintStart_toStartOf="@+id/bt_fthrow_team1"
            app:layout_constraintTop_toBottomOf="@+id/tv_team_one_name_gf"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_team2_score_gf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squada_one"
            android:text="@string/score"
            android:textColor="@color/black"
            android:textSize="72sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bt_fthrow_team2"
            app:layout_constraintStart_toStartOf="@+id/bt_fthrow_team2"
            app:layout_constraintTop_toBottomOf="@+id/tv_team_two_name_gf"
            app:layout_constraintVertical_bias="0.0" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_team1_score_gf"
            app:layout_constraintVertical_bias="0.0">

            <RadioButton
                android:id="@+id/rb_q1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/squada_one"
                android:text="@string/q1"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/rb_q2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/squada_one"
                android:text="@string/q2"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/rb_q3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/squada_one"
                android:text="@string/q3"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/rb_q4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/squada_one"
                android:text="@string/q4"
                android:textSize="24sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/tv_t1_q1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:fontFamily="@font/squada_one"
            android:padding="10dp"
            android:text="@string/score"
            android:textAlignment="center"
            android:textColor="@color/team1"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_t1_q2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_t1_q2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squada_one"
            android:padding="10dp"
            android:text="@string/score"
            android:textAlignment="center"
            android:textColor="@color/team1"
            android:textSize="24sp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/tv_t1_q1"
            app:layout_constraintEnd_toStartOf="@+id/tv_t1_q3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_t1_q1"
            app:layout_constraintTop_toTopOf="@+id/tv_t1_q1" />

        <TextView
            android:id="@+id/tv_t1_q3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squada_one"
            android:padding="10dp"
            android:text="@string/score"
            android:textAlignment="center"
            android:textColor="@color/team1"
            android:textSize="24sp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/tv_t1_q2"
            app:layout_constraintEnd_toStartOf="@+id/tv_t1_q4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_t1_q2"
            app:layout_constraintTop_toTopOf="@+id/tv_t1_q2" />

        <TextView
            android:id="@+id/tv_t1_q4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squada_one"
            android:padding="10dp"
            android:text="@string/score"
            android:textAlignment="center"
            android:textColor="@color/team1"
            android:textSize="24sp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/tv_t1_q3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_t1_q3"
            app:layout_constraintTop_toTopOf="@+id/tv_t1_q3" />


        <TextView
            android:id="@+id/tv_t2_q1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squada_one"
            android:padding="10dp"
            android:text="@string/score"
            android:textAlignment="center"
            android:textColor="@color/team2"
            android:textSize="24sp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toTopOf="@+id/tv_percentage_header_gf"
            app:layout_constraintEnd_toStartOf="@+id/tv_t2_q2"
            app:layout_constraintHorizontal_bias="0.87"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_t1_q2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_t2_q2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squada_one"
            android:padding="10dp"
            android:text="@string/score"
            android:textAlignment="center"
            android:textColor="@color/team2"
            android:textSize="24sp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/tv_t2_q1"
            app:layout_constraintEnd_toStartOf="@+id/tv_t2_q3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_t2_q1"
            app:layout_constraintTop_toTopOf="@+id/tv_t2_q1" />

        <TextView
            android:id="@+id/tv_t2_q3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squada_one"
            android:padding="10dp"
            android:text="@string/score"
            android:textAlignment="center"
            android:textColor="@color/team2"
            android:textSize="24sp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/tv_t2_q2"
            app:layout_constraintEnd_toStartOf="@+id/tv_t2_q4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_t2_q2"
            app:layout_constraintTop_toTopOf="@+id/tv_t2_q2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_t2_q4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squada_one"
            android:padding="10dp"
            android:text="@string/score"
            android:textAlignment="center"
            android:textColor="@color/team2"
            android:textSize="24sp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/tv_t2_q3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_t2_q3"
            app:layout_constraintTop_toTopOf="@+id/tv_t2_q3" />

        <TextView
            android:id="@+id/tv_percentage_header_gf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/squada_one"
            android:text="@string/percentage_placeholder"
            android:textAlignment="center"
            android:textColor="@color/ewing"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_percentage_team1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_t1_q2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_percentage_team2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squada_one"
            android:text="@string/team_shooting_percentage"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_percentage_team1"
            app:layout_constraintEnd_toEndOf="@+id/bt_fthrow_team2"
            app:layout_constraintStart_toStartOf="@+id/bt_fthrow_team2"
            app:layout_constraintTop_toTopOf="@+id/tv_percentage_team1" />

        <Button
            android:id="@+id/bt_fthrow_team1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/team1"
            android:fontFamily="@font/squada_one"
            android:text="@string/bt_ft"
            android:textSize="18sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/bt_2pt_team1"
            app:layout_constraintEnd_toStartOf="@+id/bt_fthrow_team2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_percentage_team1" />

        <TextView
            android:id="@+id/tv_percentage_team1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:fontFamily="@font/squada_one"
            android:text="@string/team_shooting_percentage"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/bt_fthrow_team1"
            app:layout_constraintEnd_toEndOf="@+id/bt_fthrow_team1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_percentage_header_gf" />

        <Button
            android:id="@+id/bt_2pt_team1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/team1"
            android:fontFamily="@font/squada_one"
            android:text="@string/bt_2ptt"
            android:textSize="18sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/bt_3pt_team1"
            app:layout_constraintEnd_toStartOf="@+id/bt_2pt_team2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_fthrow_team1" />

        <Button
            android:id="@+id/bt_3pt_team1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/team1"
            android:fontFamily="@font/squada_one"
            android:text="@string/bt_3pt"
            android:textSize="18sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/bt_missed_shot_team1"
            app:layout_constraintEnd_toStartOf="@+id/bt_3pt_team2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_2pt_team1" />

        <Button
            android:id="@+id/bt_missed_shot_team1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/team1"
            android:fontFamily="@font/squada_one"
            android:text="@string/bt_mshot"
            android:textSize="18sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/bt_end_game"
            app:layout_constraintEnd_toStartOf="@+id/bt_missed_shot_team2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_3pt_team1" />

        <Button
            android:id="@+id/bt_fthrow_team2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/team2"
            android:fontFamily="@font/squada_one"
            android:text="@string/bt_ft"
            android:textSize="18sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/bt_fthrow_team1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bt_fthrow_team1"
            app:layout_constraintTop_toTopOf="@+id/bt_fthrow_team1" />

        <Button
            android:id="@+id/bt_2pt_team2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/team2"
            android:fontFamily="@font/squada_one"
            android:text="@string/bt_2ptt"
            android:textSize="18sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/bt_2pt_team1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bt_2pt_team1"
            app:layout_constraintTop_toTopOf="@+id/bt_2pt_team1" />

        <Button
            android:id="@+id/bt_3pt_team2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/team2"
            android:fontFamily="@font/squada_one"
            android:text="@string/bt_3pt"
            android:textSize="18sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/bt_3pt_team1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bt_3pt_team1"
            app:layout_constraintTop_toTopOf="@+id/bt_3pt_team1" />

        <Button
            android:id="@+id/bt_missed_shot_team2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/team2"
            android:fontFamily="@font/squada_one"
            android:text="@string/bt_mshot"
            android:textSize="18sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/bt_missed_shot_team1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bt_missed_shot_team1"
            app:layout_constraintTop_toTopOf="@+id/bt_missed_shot_team1" />

        <Button
            android:id="@+id/bt_end_game"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/ewing"
            android:fontFamily="@font/squada_one"
            android:text="@string/bt_end"
            android:textSize="18sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_missed_shot_team1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>